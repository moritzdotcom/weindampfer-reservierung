generator client {
  provider = "prisma-client"
  output   = "./generated"
}

datasource db {
  provider = "postgresql"
}

model User {
  id       String    @id @default(uuid())
  name     String
  email    String    @unique
  password String
  sessions Session[]
}

model Session {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
}

model Event {
  id                  String           @id @default(uuid())
  name                String
  date                DateTime
  minimumSpend        Int              @default(50)
  ticketPrice         Int              @default(30)
  minimumSpendPremium Int?
  ticketPricePremium  Int?
  minimumSpendMode    MinimumSpendMode @default(PerCapita)
  eventType           EventType        @default(WEINDAMPFER)
  createdAt           DateTime         @default(now())
  reservations        Reservation[]
}

model Reservation {
  id                   String            @id @default(uuid())
  name                 String
  email                String
  phone                String            @default("")
  streetAddress        String            @default("")
  city                 String            @default("")
  zipCode              String            @default("")
  people               Int
  occasion             String            @default("")
  ticketsNeeded        Boolean           @default(false)
  tableType            String            @default("")
  isPremium            Boolean           @default(false)
  drinkPackage         String            @default("")
  eventId              String
  event                Event             @relation(fields: [eventId], references: [id])
  confirmationState    ConfirmationState @default(REQUESTED)
  tableNumber          String?
  invoiceUrl           String?
  payed                Boolean           @default(false)
  notified             DateTime?
  cancellationMailSent Boolean           @default(false)
  paymentReminderSent  DateTime?
  createdAt            DateTime          @default(now())
}

enum ConfirmationState {
  REQUESTED
  CONFIRMED
  CANCELLED
}

enum MinimumSpendMode {
  PerCapita
  PerTable
}

enum EventType {
  WEINDAMPFER
  JECKERIA
}
